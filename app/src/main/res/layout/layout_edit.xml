<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/secondaryColor">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"

        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:id="@+id/Top_half_layout"
        android:background="@color/secondaryColor">

        <EditText
            android:id="@+id/activityTextBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/action_hint"
            android:inputType="text"
            android:textColorHint="@color/accentColor"
            android:textColor="@color/accentColor"
            android:textSize="45dp"
            android:maxLength="20"
            android:background="@android:color/transparent"
            android:layout_centerHorizontal="true"/>

        <TextView

            android:id="@+id/lblLocation"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/accentColor"
            android:textSize="15dp"
            android:layout_above="@+id/lblDate"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:scaleType="center"
            android:id="@+id/imgProfilePicture"/>

        <TextView

            android:id="@+id/lblDate"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="49dp"
            android:textColor="@color/accentColor"
            android:textSize="15dp"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSave"
            android:background="@color/tertiaryColor"
            android:text="@string/btnSaveText"
            android:textColor="@color/accentColor"
            android:layout_marginBottom="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />


        // Your Codes

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"

            android:orientation="vertical"
            android:id="@+id/bottom_half_layout"
            android:background="@color/accentColor">
        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.google.android.gms.maps.MapFragment" />

    </LinearLayout>

</LinearLayout>